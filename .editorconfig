# EditorConfig is awesome: https://editorconfig.org/

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# CSS & SCSS-Files
[{*.css,*.scss}]
indent_size = 2

# HTML-Files
[*.html]
indent_size = 4

# JS-Files
[*.js]
indent_size = 4

# JSON-Files
[*.json]
indent_size = 2

# PHP-Files
[*.php]
indent_size = 4

# MD-Files
[*.md]
indent_size = 2

# SQL-Files
[*.sql]
indent_size = 2

# YAML-Files
[{*.yaml,*.yml}]
indent_size = 2

# .htaccess
[.htaccess]
indent_size = 4
